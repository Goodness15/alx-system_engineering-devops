#!/bin/bash

# Function to convert from custom base to decimal
to_decimal() {
    local num=$1 base=$2 res=0 mult=1
    for (( i=${#num}-1; i>=0; i-- )); do
        char=${num:$i:1}
        value=$(echo -n "$base" | grep -bo "$char" | head -1  | cut -d: -f1)
        (( res += value * mult ))
        (( mult *= ${#base} ))
    done
    echo $res
}

# Convert WATER and STIR to decimal
water_dec=$(to_decimal "$WATER" "water")
stir_dec=$(to_decimal "$STIR" "stir")

# Add the two decimal numbers
sum_dec=$((water_dec + stir_dec))

# Convert the decimal sum to base bestchol
result=""
base="bestchol"
while (( sum_dec > 0 )); do
    remainder=$((sum_dec % ${#base}))
    result="${base:$remainder:1}$result"
    sum_dec=$((sum_dec / ${#base}))
done

# Print the result
echo "$result"

